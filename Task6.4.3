from PIL import Image
import numpy as np
import cv2
import numpy


def get_encodings(path):
    """
    This function get a path for a file, then the function encodes the file and returns the encoded message.
    :param path: path for a file.
    :return: the encoded message.
    """
    img = cv2.imread(path, 0)
    coordinates = sorted(numpy.column_stack(numpy.where(img == 1)), key=lambda x: x[1])
    return "".join([chr(row) for row, col in coordinates])


